---
// Component Imports
import Card from "../components/Card.astro";
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
import Cookie from "../components/Cookie.astro";
import Overatten from "../components/Overatten.astro";
import Button from "../components/Button.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<MainLayout>
  <section id="splash_mobile">
    <div class="flex flex-col items-center justify-center">
      <article class="flex flex-col gap-space20">
        <h1 class="text-mobileH1 text-black600 font-text font-bold">
          CIDERREVOLUTION
        </h1>
        <h2 class="text-mobileH2 text-black500 font-text font-semibold">
          Cider der smager af meget mere
        </h2>
        <div class="w-full flex justify-center">
          <div class="max-w-[400px]">
            <img class="" src="../img/splash.svg" alt="" />
          </div>
        </div>
        <div class="w-full justify-center flex">
          <Button
            variant="secondary"
            knapTekst="Se cidershoppen!"
            kurv={false}
          />
        </div>
        <p class="text-deskP font-text text-black500 max-w-[550px]">
          I'm baby chartreuse aesthetic gentrify actually heirloom lyft,
          leggings fashion axe meditation YOLO migas. Brooklyn meh marfa
          dreamcatcher crucifix cornhole, typewriter.
        </p>
      </article>
    </div>
  </section>
  <section id="splash_desktop">
    <article class="grid grid-cols-2 hejsa">
      <div class="col1 flex flex-col gap-space25">
        <h1 class="text-deskH1 font-bold font-text text-black500">
          CIDERREVOLUTION
        </h1>
        <h2 class="text-deskH2 font-semibold font-text text-black500">
          Cider der smager af meget mere
        </h2>
        <p class="text-deskP font-text text-black500 max-w-[550px]">
          I'm baby chartreuse aesthetic gentrify actually heirloom lyft,
          leggings fashion axe meditation YOLO migas. Brooklyn meh marfa
          dreamcatcher crucifix cornhole, typewriter.
        </p>
        <div class="cta-btn">
          <Button
            variant="secondary"
            knapTekst="Se cidershoppen!"
            kurv={false}
          />
        </div>
      </div>
      <div class="w-full flex items-end">
        <div class="splash-img max-w-[500px]">
          <img src="../img/splash.svg" alt="" />
        </div>
      </div>
    </article>
  </section>
</MainLayout>

