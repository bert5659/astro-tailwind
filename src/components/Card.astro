---
const { titel, producent, pris, pic, udsolgt, tilbud = "vin" } = Astro.props;
import Button from "../components/Button.astro";
---

<div class="flex items-center flex-col w-[300px]">
  <div class="">
    <img class="" src={`/img/produktbilleder/${pic}_pic-100.webp`} alt="" />
  </div>

  <div
    class="bg-beige400 pb-space25 flex items-center flex-col w-[300px] lg:pb-space25"
  >
    <h4 class="text-deskH4 font-text mt-space20 font-bold text-grey600">
      {titel}
    </h4>
    <h4 class="text-deskH4 font-text mb-space20 text-grey600">{producent}</h4>
    <h4 class="text-deskH4 font-text font-bold mb-space20 text-black600">
      {pris}
    </h4>
    <Button
      href="/kurv"
      variant="primary"
      knapTekst="TilfÃ¸j til kurv"
      kurv={false}
    />
  </div>
  {
    tilbud == true && (
      <div class="absolute mr-[150px] mt-space20 text-mobileH1 w-[100px] ">
        <img src="/img/tilbud.svg" alt="tilbudikon" />
      </div>
    )
  }
  {
    udsolgt == true && (
      <div class="absolute mr-[150px] mt-space20 text-mobileH1 w-[100px] ">
        <img src="/img/udsolgt.svg" alt="tilbudikon" />
      </div>
    )
  }
</div>
